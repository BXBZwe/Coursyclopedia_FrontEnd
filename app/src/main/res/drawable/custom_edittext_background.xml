<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the EditText -->
    <solid android:color="#FFFFFF" /> <!-- Change #FFFFFF to your desired background color -->

    <!-- Optional: Add a border to the EditText -->
    <stroke
        android:width="1dp"
        android:color="#FF0000" /> <!-- Change #FF0000 to your desired border color -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional: Add padding within the EditText -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
