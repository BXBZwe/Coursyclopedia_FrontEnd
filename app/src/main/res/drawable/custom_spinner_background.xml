<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF" /> <!-- Change this to your desired background color -->

    <!-- Border definition -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Change this to your desired border color -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional: Padding inside the Spinner -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
