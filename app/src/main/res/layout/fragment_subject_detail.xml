<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.users.fragments.SubjectDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">




        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background">

        <!-- Subject Name -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subject"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <TextView
                android:id="@+id/subjectNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Cloud Computing"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:ellipsize="end"/>
            <EditText
                android:id="@+id/editTextSubjectName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Cloud Computing"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:ellipsize="end"/>
        </TableRow>

        <!-- Subject Code -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Code"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <TextView
                android:id="@+id/subjectCodeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="CSX3009"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"/>
            <EditText
                android:id="@+id/editTextSubjectcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Code"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:ellipsize="end"/>
        </TableRow>

        <!-- Description -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Description"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <TextView
                android:id="@+id/subjectDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_weight="2"
                android:text="Introduction to cloud computing concepts and practices"
                android:ellipsize="end"/>
            <EditText
                android:id="@+id/editsubjectDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Introduction to cloud computing concepts and practices"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:ellipsize="end"/>
        </TableRow>

        <!-- Campus -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Campus"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <TextView
                android:id="@+id/campusTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Main Campus"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"/>

            <EditText
                android:id="@+id/editcampus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Main Campus"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:ellipsize="end"/>
        </TableRow>

        <!-- Credits -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Credits"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <TextView
                android:id="@+id/creditTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="4"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"/>
            <EditText
                android:id="@+id/editTextCredit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Credits"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:ellipsize="end"/>
        </TableRow>

        <!-- Likes -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Likes"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <TextView
                android:id="@+id/likesTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="200"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"/>
        </TableRow>

        <!-- Available Duration -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available Duration"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <TextView
                android:id="@+id/availableDurationTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Fall Semester"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:ellipsize="end"/>

        </TableRow>
    </TableLayout>

        <ImageView
            android:id="@+id/likeicon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_like_selector"
            app:layout_constraintTop_toBottomOf="@id/tableLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/wishlistIcon"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/like"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/wishlistIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_wishlist"
            app:layout_constraintTop_toBottomOf="@id/tableLayout"
            app:layout_constraintStart_toEndOf="@id/likeImageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/wishlist"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
