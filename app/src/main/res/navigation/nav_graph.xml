<?xml version="1.0" encoding="utf-8"?>
<!--suppress NavigationFile -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/facultyFragment"> <!-- Add this line -->

    <!-- Define the FacultyFragment as a starting destination -->
    <fragment
        android:id="@+id/facultyFragment"
        android:name="com.example.courscyclopedia.ui.users.fragments.FacultyFragment"
        android:label="faculty_fragment">
        <!-- Define an action to navigate to the SubjectsFragment -->
        <action
            android:id="@+id/action_facultyFragment_to_subjectsFragment"
            app:destination="@id/subjectsFragment" />
    </fragment>

    <fragment
        android:id="@+id/userFormFragment"
        android:name="com.example.courscyclopedia.ui.users.fragments.UserFormFragment"
        android:label="user_form_fragment">
        <!-- Add any arguments needed for the UserFormFragment here -->
        <!-- Example argument for email -->
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>

    <!-- Assuming MainActivity is where you want to start the UserFormFragment from -->
    <action
        android:id="@+id/action_global_userFormFragment"
        app:destination="@id/userFormFragment" />

    <!-- Define the SubjectsFragment as a destination -->
    <fragment
        android:id="@+id/subjectsFragment"
        android:name="com.example.courscyclopedia.ui.users.fragments.SubjectsFragment"
        android:label="subjects_fragment">
        <argument
            android:name="facultyId"
            app:argType="string" />

        <action
            android:id="@+id/action_subjectsFragment_to_subjectDetailFragment"
            app:destination="@id/SubjectDetailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/SubjectDetailFragment"
        android:name="com.example.courscyclopedia.ui.users.fragments.SubjectDetailFragment"
        android:label="Subject Details">
        <argument
            android:name="subjectId"
            app:argType="string" />
        <!-- Define other arguments as needed -->
    </fragment>


</navigation>

